{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/WebBreacher/WhatsMyName/main/wmn-data-schema.json",
  "title": "WhatsMyName",
  "type": "object",
  "required": [
    "license",
    "authors",
    "categories",
    "sites"
  ],
  "properties": {
    "license": {
      "description": "CC BY-SA 4.0 license text",
      "const": [
        "Copyright (C) Micah Hoffman",
        "This work is licensed under the Creative Commons Attribution-ShareAlike",
        "4.0 International License. To view a copy of this license, visit",
        "http://creativecommons.org/licenses/by-sa/4.0/ or send a letter to",
        "Creative Commons, PO Box 1866, Mountain View, CA 94042, USA."
      ]
    },
    "authors": {
      "description": "List of contributors to the WhatsMyName project",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "categories": {
      "description": "List of valid category values for classifying sites",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1,
        "examples": [
          "archived"
        ]
      }
    },
    "sites": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "uri_check",
          "e_code",
          "e_string",
          "m_string",
          "m_code",
          "known",
          "cat"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name of the website",
            "minLength": 1,
            "examples": [
              "Anime-Planet"
            ]
          },
          "uri_check": {
            "type": "string",
            "description": "URL to check username. Requires '{account}' placeholder unless post_body is used",
            "format": "uri",
            "pattern": "^(http|https)://.+$",
            "examples": [
              "https://www.anime-planet.com/api/validation/username"
            ]
          },
          "uri_pretty": {
            "type": "string",
            "description": "User-facing profile URL when uri_check is an API",
            "format": "uri",
            "pattern": "^(http|https)://.+$",
            "examples": [
              "https://www.anime-planet.com/users/{account}"
            ]
          },
          "post_body": {
            "type": "string",
            "description": "POST request body with '{account}' placeholder. Requires headers",
            "examples": [
              "{\"username\":\"{account}\"}"
            ]
          },
          "headers": {
            "type": "object",
            "description": "HTTP headers for the request. Required with post_body or for User-Agent protection bypass",
            "minProperties": 1,
            "additionalProperties": {
              "type": "string"
            },
            "examples": [
              {
                "Content-Type": "application/json"
              }
            ]
          },
          "strip_bad_char": {
            "type": "string",
            "description": "Characters to remove from usernames before checking",
            "minLength": 1,
            "examples": [
              "."
            ]
          },
          "e_code": {
            "type": "integer",
            "description": "HTTP status code when username exists",
            "minimum": 100,
            "maximum": 599,
            "examples": [
              400
            ]
          },
          "e_string": {
            "type": "string",
            "description": "Response string indicating username exists",
            "examples": [
              "\"msg\":\"Username is unavailable\""
            ]
          },
          "m_string": {
            "type": "string",
            "description": "Response string indicating username is missing",
            "examples": [
              "\"status\":\"ok\""
            ]
          },
          "m_code": {
            "type": "integer",
            "description": "HTTP status code when username is missing",
            "minimum": 100,
            "maximum": 599,
            "examples": [
              200
            ]
          },
          "known": {
            "type": "array",
            "description": "Verified existing usernames for testing",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1,
              "examples": [
                "zala",
                "lindapearl"
              ]
            }
          },
          "cat": {
            "type": "string",
            "description": "Site category",
            "enum": [
              "archived",
              "art",
              "blog",
              "business",
              "coding",
              "dating",
              "finance",
              "gaming",
              "health",
              "hobby",
              "images",
              "misc",
              "music",
              "news",
              "political",
              "search",
              "shopping",
              "social",
              "tech",
              "video",
              "xx NSFW xx"
            ],
            "examples": [
              "social"
            ]
          },
          "valid": {
            "type": "boolean",
            "description": "Set false to skip broken sites",
            "examples": [
              true
            ]
          },
          "protection": {
            "type": "array",
            "description": "Anti-automation measures on the site",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                "anubis",
                "captcha",
                "cloudflare",
                "cloudfront",
                "ddos-guard",
                "multiple",
                "other",
                "user-agent",
                "user-auth"
              ]
            },
            "examples": [
              [
                "cloudflare",
                "captcha"
              ]
            ]
          }
        },
        "additionalProperties": false,
        "allOf": [
          {
            "if": {
              "properties": {
                "post_body": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "post_body"
              ]
            },
            "then": {
              "required": [
                "headers"
              ],
              "properties": {
                "post_body": {
                  "type": "string",
                  "pattern": "\\{account\\}"
                }
              }
            },
            "else": {
              "properties": {
                "uri_check": {
                  "type": "string",
                  "pattern": "\\{account\\}"
                }
              }
            }
          }
        ]
      }
    }
  }
}